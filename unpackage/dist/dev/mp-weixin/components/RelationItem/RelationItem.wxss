  --tab-height: 90rpx;
}
.relation-item {
  padding: 40rpx 85rpx;
  background: rgba(255, 105, 180, 0.25);
  -webkit-backdrop-filter: blur(0px);
          backdrop-filter: blur(0px);
  border-radius: 50px;
  display: flex;
  justify-content: space-between;
}
.relation-item .info {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 14rpx;
}
.relation-item .info .avatar {
  border: 3px solid #fff;
  width: 120rpx;
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.relation-item .info .nickname {
  color: #fff;
}
.relation-item .info .invite-btn {
  height: 66rpx;
  line-height: 66rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
}
.relation-item .no-relation {
  border: 3px solid darkslategray;
  background-color: black;
  border-radius: 100%;
  width: 90rpx;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}